{
  "id": "marathon-lb-autoscale",
  "args":[
    "--marathon", "http://leader.mesos:8080",
    "--haproxy", "http://haproxy.marathon.mesos",
    "--interval", "1",
    "--cooldown", "15",
    "--samples", "3",
    "--threshold-instances", "1"
    "--target-rps", "1",
    "--apps", "layer4-lb_8080"
  ],
  "cpus": 0.1,
  "mem": 16.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/marathon-lb-autoscale",
      "network": "HOST",
      "forcePullImage": true
    }
  }
}


