{
  "id": "/layer4lb",
  "cmd": "/bin/sh -c 'apk --update upgrade; apk add ca-certificates wget; update-ca-certificates; wget https://gist.githubusercontent.com/popnam/13a432461e9150df114d20deedb4fba4/raw/66a8279315dddc452c5c9e1a143c0b43bddc0e23/simple-app.py; python3 simple-app.py '",
  "cpus": 0.2,
  "mem": 32.0,
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 5,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "portType": "PORT_INDEX",
      "ignoreHttp1xx": false
    }
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "python:3-alpine",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp",
          "name": "web",
          "servicePort": 8080,
          "labels": {
            "VIP_0": "1.2.3.4:8080"
          },
          "hostPort": 0
        }
      ]
    }
  }
}

