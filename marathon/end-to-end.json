{
  "id": "/cluster",
  "groups": [
    {  
      "id": "/cluster/redis",
      "apps": [
	    {
		  "id": "/cluster/redis/slave",
		  "cpus": 0.8,
		  "mem": 32.0,
	  	  "instances": 2,
	  	  "constraints": [["hostname", "UNIQUE", ""]],
      	  "dependencies": ["/cluster/redis/master"],
		  "healthChecks": [
			    {
			      "protocol": "TCP",
			      "path": "/",
			      "gracePeriodSeconds": 5,
			      "intervalSeconds": 5,
			      "timeoutSeconds": 20,
			      "maxConsecutiveFailures": 3,
			      "portType": "PORT_INDEX",
			      "ignoreHttp1xx": false
			    }
		  ],
		  "container": {
		    "type": "DOCKER",
		    "docker": {
		      "image": "redis:3.2-alpine",
		      "network": "BRIDGE",
		      "portMappings": [
				{ "containerPort": 6379, "hostPort": 6379 }
		      ]
		    }
		  },
		  "cmd": "redis-server --slaveof master-redis-cluster.marathon.mesos 6379"
	     },
	    {
		  "id": "/cluster/redis/master",
		  "cpus": 0.5,
		  "mem": 32.0,
	  	  "constraints": [["hostname", "UNIQUE", ""]],
	  	  "healthChecks": [
			    {
			      "protocol": "TCP",
			      "path": "/",
			      "gracePeriodSeconds": 5,
			      "intervalSeconds": 5,
			      "timeoutSeconds": 20,
			      "maxConsecutiveFailures": 3,
			      "portType": "PORT_INDEX",
			      "ignoreHttp1xx": false
			    }
		  ],
		  "container": {
		    "type": "DOCKER",
		    "docker": {
		      "image": "redis:3.2-alpine",
		      "network": "BRIDGE",
		      "portMappings": [
					{ "containerPort": 6379, "hostPort": 6379 }
		      ]
		    }
		  },
		  "cmd": "redis-server"
		}
	   ]
    },
    {  
      "id": "/cluster/webapp",
      "dependencies": ["/cluster/redis"],
      "apps": [
      		{
		      "id": "webapp",
			  "cmd": "/bin/sh -c 'apk --update upgrade; apk add ca-certificates wget; update-ca-certificates; wget 10.0.13.97:8080/http-server-redis.py; pip install redis; python3 http-server-redis.py master-redis-cluster.marathon.mesos slave-redis-cluster.marathon.mesos'",
			  "cpus": 0.2,
			  "mem": 32.0,
			  "instances": 2,
			  "healthChecks": [
			    {
			      "protocol": "HTTP",
			      "path": "/",
			      "gracePeriodSeconds": 5,
			      "intervalSeconds": 5,
			      "timeoutSeconds": 20,
			      "maxConsecutiveFailures": 3,
			      "portType": "PORT_INDEX",
			      "ignoreHttp1xx": false
			    }
			  ],
			  "container": {
			    "type": "DOCKER",
			    "docker": {
			      "image": "python:3-alpine",
			      "network": "BRIDGE",
			      "portMappings": [
			        {
			          "containerPort": 8080,
			          "protocol": "tcp",
			          "name": "web",
			          "servicePort": 8080,
			          "labels": {
			            "VIP_0": "1.2.3.4:8080"
			          },
			          "hostPort": 0
			        }
			      ]
			    }
			  }
			},
			{
			    "id": "haproxy",
			    "cpus": 0.2,
			    "instances": 1,
			    "mem": 32,
			    "container": {
			        "type": "DOCKER",
			        "docker": {
			            "image": "sargun/haproxy-demo:3",
			            "network": "BRIDGE",
			            "portMappings": [
							{ "containerPort": 80, "protocol": "tcp", "hostPort": 80 },
							{ "containerPort": 9090, "protocol": "tcp", "hostPort": 9090 }
					     ]
			        }
			    }
			}
		]
    }
  ]
}

